@page "/Error/404"

<PageTitle>Page Not Found</PageTitle>

<main class="container text-center error-page">
    <section>
        <h1 class="display-1 text-warning mb-4">404</h1>
        <h2 class="mb-4">Page Not Found</h2>
        <p class="lead mb-4">Sorry! It looks like you drove off to a page that doesn't exist!.</p>

        <a href="/" class="btn btn-primary btn-lg mb-5">Return Home</a>

        <hr class="w-50 mt-4 mb-4" />
        <p class="small text-muted">Check the URL or return to the homepage.</p>
    </section>
</main>

<style>
.error-page {
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.error-page h1 {
    font-size: 6rem;
    font-weight: 700;
}

.error-page h2 {
    font-size: 2rem;
    font-weight: 500;
}

.error-page p.lead {
    font-size: 1.25rem;
}

.error-page a.btn {
    padding: 0.75rem 2rem;
    display: block;
    margin: 0 auto;
}

.error-page hr {
    border-top: 2px solid #dee2e6;
}
</style>
